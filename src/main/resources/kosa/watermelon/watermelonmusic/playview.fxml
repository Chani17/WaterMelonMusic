<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kosa.watermelon.watermelonmusic.PlayViewController">
    <children>
        <Label fx:id="songTitle" text="Song Title" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Label fx:id="artist" text="Artist" textAlignment="CENTER">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
      <ImageView fx:id="albumCover" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets bottom="30.0" top="20.0" />
         </VBox.margin></ImageView>
        <ProgressBar fx:id="progressBar" prefWidth="300.0" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="stopButton" text="■" />
                <Button fx:id="playButton" text="▶" />
                <Button fx:id="pauseButton" text="||" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
