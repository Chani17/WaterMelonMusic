<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kosa.watermelon.watermelonmusic.PlayViewController">
    <children>
        <Label fx:id="songTitle" text="Song Title" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Label fx:id="artist" text="Artist" textAlignment="CENTER">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="300.0" />
        <ProgressBar fx:id="progressBar" prefWidth="300.0" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="stopButton" text="■" />
                <Button fx:id="playButton" text="▶" />
                <Button fx:id="pauseButton" text="||" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>
</VBox>
