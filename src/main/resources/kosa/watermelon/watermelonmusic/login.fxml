<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER_LEFT" prefHeight="464.0" prefWidth="600.0"
	spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="kosa.watermelon.watermelonmusic.LoginController">
	<children>
		<!-- Left VBox for Image -->
		<VBox alignment="CENTER_LEFT" prefHeight="400.0"
			prefWidth="315.0" spacing="10">
			<children>
				<Rectangle arcHeight="5.0" arcWidth="5.0" height="399.0"
					stroke="#e0fbe2" strokeType="INSIDE" width="277.0">
					<fill>
						<LinearGradient endX="1.0" endY="1.0"
							startY="0.16403787895708055">
							<stops>
								<Stop>
									<color>
										<Color red="1.0" green="1.0" blue="1.0" />
									</color>
								</Stop>
								<Stop offset="0.8004484304932737">
									<color>
										<Color red="0.8820000290870667"
											green="0.9800000190734863" blue="0.888533353805542" />
									</color>
								</Stop>
								<Stop offset="0.946188340807175">
									<color>
										<Color red="0.8820000290870667"
											green="0.9800000190734863" blue="0.888533353805542" />
									</color>
								</Stop>
								<Stop offset="1.0">
									<color>
										<Color red="0.8784313797950745"
											green="0.9843137264251709" blue="0.886274516582489" />
									</color>
								</Stop>
							</stops>
						</LinearGradient>
					</fill>
				</Rectangle>
			</children>
		</VBox>

		<!-- Right VBox for Labels, TextFields and Button -->
		<VBox alignment="CENTER" spacing="10">
			<children>
				<Label text="WaterMelon Music" textAlignment="CENTER">
					<font>
						<Font name="D2Coding" size="24.0" />
					</font>
				</Label>
				<HBox alignment="CENTER" spacing="10">
					<children>
						<Label text="ID">
							<font>
								<Font name="D2Coding" size="14.0" />
							</font>
						</Label>
						<TextField fx:id="userID" />
					</children>
				</HBox>
				<HBox alignment="CENTER" spacing="10">
					<children>
						<Label text="PW">
							<font>
								<Font name="D2Coding" size="14.0" />
							</font>
						</Label>
						<PasswordField fx:id="userPW" />
					</children>
				</HBox>
				<Button fx:id="loginBtn" mnemonicParsing="false"
					onAction="#selectedLoginBtn" prefHeight="25.0" prefWidth="165.0"
					style="-fx-background-color: #E0FBE2; -fx-border-color: #F1F1F1; -fx-border-radius: 20%; -fx-background-radius: 20%;"
					text="Login">
					<font>
						<Font name="D2Coding" size="12.0" />
					</font>
				</Button>
			</children>
		</VBox>
	</children>
</HBox>
