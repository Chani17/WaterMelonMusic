<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane prefHeight="600.0" prefWidth="800.0"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="kosa.watermelon.watermelonmusic.SongChartController">
	<children>
		<Label text="▶ 검색" GridPane.columnIndex="0"
			GridPane.rowIndex="0">
			<font>
				<Font name="D2Coding" size="18.0" />
			</font>
			<GridPane.margin>
				<Insets left="18.0" top="15.0" />
			</GridPane.margin>
		</Label>
		<HBox fx:id="searchContainer" alignment="CENTER"
			prefHeight="83.0" prefWidth="605.0" spacing="10" visible="true"
			GridPane.columnIndex="1" GridPane.rowIndex="0">
			<!-- Search TextField and Button will be loaded here from search.fxml -->
		</HBox>

		<AnchorPane GridPane.columnIndex="2" GridPane.rowIndex="0">
			<Button fx:id="goToDashboard_BTN"
				onAction="#goToDashboard_Action" prefHeight="30.0" prefWidth="99.0"
				text="◀◀" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="35.0">
				<font>
					<Font name="D2Coding" size="12.0" />
				</font>
			</Button>
		</AnchorPane>
		<TableView fx:id="tableView" prefHeight="377.0"
			prefWidth="643.0" GridPane.columnSpan="3" GridPane.rowIndex="2"
			GridPane.vgrow="ALWAYS">
			<columns>
				<TableColumn fx:id="ranking"
					prefWidth="42.333343505859375" text="순위" />
				<TableColumn fx:id="songName" prefWidth="194.0"
					text="곡 정보" />
				<TableColumn fx:id="artistName" prefWidth="186.0"
					text="아티스트" />
				<TableColumn fx:id="playBtn"
					prefWidth="57.33331298828125" text="듣기" />
				<TableColumn fx:id="addBtn" prefWidth="58.0" text="담기" />
				<TableColumn fx:id="likebtn"
					prefWidth="61.33331298828125" text="좋아요" />
			</columns>
			<GridPane.margin>
				<Insets top="40.0" />
			</GridPane.margin>
		</TableView>
	</children>
	<columnConstraints>
		<ColumnConstraints hgrow="ALWAYS"
			maxWidth="228.599951171875" minWidth="68.80000000000001"
			prefWidth="105.66665903727215" />
		<ColumnConstraints halignment="CENTER"
			hgrow="ALWAYS" maxWidth="604.0000076293945"
			minWidth="324.800048828125" prefWidth="604.0000076293945" />
		<ColumnConstraints halignment="RIGHT" hgrow="NEVER"
			maxWidth="120.79999999999995" minWidth="49.599987792968705"
			prefWidth="88.79999999999995" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints vgrow="NEVER" />
		<RowConstraints vgrow="NEVER" />
		<RowConstraints vgrow="ALWAYS" />
	</rowConstraints>
</GridPane>
